@page
@model RetailEdge.Web.Pages.LoginModel
@{
    ViewData["Title"] = "Login";
}

<div class="d-flex justify-content-center align-items-center vh-100 bg-light">
    <div class="card shadow p-4" style="width: 400px;">
        <h3 class="text-center mb-4 text-primary">RetailEdge Portal</h3>

        <form method="post">
            <div class="form-group mb-3">
                <label class="form-label">Username</label>
                <input asp-for="Username" class="form-control" placeholder="Enter username" />
            </div>

            <div class="form-group mb-4">
                <label class="form-label">Password</label>
                <input asp-for="Password" type="password" class="form-control" placeholder="Enter password" />
            </div>

            @if (!string.IsNullOrEmpty(Model.Message))
            {
                <div class="alert alert-danger">@Model.Message</div>
            }

            <div class="d-grid">
                <button type="submit" class="btn btn-primary">Login</button>
            </div>
        </form>
    </div>
</div>
